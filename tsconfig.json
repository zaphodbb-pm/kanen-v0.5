{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "checkJs": true,
    "types": ["svelte", "meteor"],
    "lib": ["es6", "dom", "es2017"]
  },

  "include": ["imports/**/*.js", "imports/**/*.svelte"],

  "exclude": [
    "public/*",
    "node_modules",
    "*.test.js",
    "*.spec.js"
  ]
}
